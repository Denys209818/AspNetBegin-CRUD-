@model AspNetCoreFinalApp.Models.CarUpdateModelView

@{
    ViewData["Title"] = "Редагування";
}

@if (Model != null)
{
    <h1>Редагування</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Developer" class="control-label"></label>
                    <input asp-for="Developer" class="form-control" value="@Model.Developer" />
                    <span asp-validation-for="Developer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" value="@Model.Model" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" value="@Model.Image" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" value="₴ @Model.Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" value="@Model.Year" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
<div>
    <a asp-action="Index">Повернутися назад</a>
</div>

@section Scripts {
    <script src="~/lib/imask/imask.min.js"></script>
    <script src="~/js/CarCreate.js"></script>
}
}
else
{
    <h1 class="text-center text-dark">Щось пішло не так :(</h1>
    <p class="text-center">Спробуйте наступного разу. <a asp-controller="Car" asp-action="Index">На головну</a></p>
}


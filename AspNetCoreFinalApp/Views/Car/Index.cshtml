@model List<CarModelView>
@{
    ViewData["Title"] = "Мій автопарк";
}

<h1 class="text-center text-dark text-muted h1"><em>Мій автопарк</em></h1>

<div class="mx-auto container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Ідентифікатор</th>
                <th scope="col">Виробник</th>
                <th scope="col">Модель</th>
                <th scope="col">Фотографія</th>
                <th scope="col">Ціна</th>
                <th scope="col">Рік випуску</th>
                <th scope="col">Інструменти</th>
            </tr>
        </thead>
        <tbody>
            
            @{int counter = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@(counter++)</td>
                    <td>@item.Developer</td>
                    <td>@item.Model</td>
                    <td>@item.Image</td>
                    <td>₴ @item.Price</td>
                    <td>@item.Year</td>
                    <td>
                        <div class="mx-auto w-100">
                            <p class="text-center my-auto">
                                <a asp-controller="Car" asp-action="Edit" asp-route-id="@item.Id">
                                    <span class="fa fa-pencil-square-o text-info fa-lg"></span>
                                </a>
                                <a asp-controller="Car" asp-action="Delete" asp-route-id="@item.Id">
                                    <span class="fa fa-trash-o text-danger fa-lg"></span>
                                </a>
                            </p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="container">
    <a asp-action="Create" asp-controller="Car" class="btn btn-secondary my-2 align-content-center">Додати автомобіль</a>
</div>

